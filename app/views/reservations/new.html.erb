<%= link_to("更新", reservations_new_path) %>

<% if  flash[:notice] %>
    <%= flash[:notice] %>
<% end %>
<%= render "error_messages" %>


<%= form_for(@reservation, url: reservations_create_path) do |f| %>

    <%= f.text_field :name, :placeholder => "氏名" %>様 <br>
    メニュー：<%= f.select :menu, ["カット", "カラー", "その他"], selected: "カット" %> <br>
    <%= f.date_field :date %>
    <%= f.select :s_time, @s_times %>
    ~
    <%= f.select :f_time, @f_times %>　<br>
    <%= f.text_field :memo, :placeholder => "メモ" %> <br>
    <%= f.submit "予約登録" %> 
<% end%>

<%= render "index" %>


